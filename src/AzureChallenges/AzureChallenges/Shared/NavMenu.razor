@using AzureChallenges.Data

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Azure Challenges</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="resourcegroup" Match="NavLinkMatch.All">
                <span class="oi oi-folder" aria-hidden="true"></span> Resource Group
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="storageaccount" Match="NavLinkMatch.All">
                <span class="oi oi-grid-two-up" aria-hidden="true"></span> Storage Account
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="keyvault" Match="NavLinkMatch.All">
                <span class="oi oi-lock-locked" aria-hidden="true"></span> Key Vault
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="sqlserver" Match="NavLinkMatch.All">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> SQL Server
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="appservice" Match="NavLinkMatch.All">
                <span class="oi oi-browser" aria-hidden="true"></span> App Service
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="serviceendpoint" Match="NavLinkMatch.All">
                <span class="oi oi-link-intact" aria-hidden="true"></span> Service Endpoint
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="privateendpoint" Match="NavLinkMatch.All">
                <span class="oi oi-link-intact" aria-hidden="true"></span> Private Endpoint
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bonus" Match="NavLinkMatch.All">
                <span class="oi oi-link-intact" aria-hidden="true"></span> Bonus
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool _showExtraChallenges = false;

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
